{
  "root": "./",
  "validPaths": [
    "apps/frontend/**",
    "apps/backend/**",
    "apps/web/**",
    "packages/**",
    "scripts/**",
    "agent/**",
    "modules/**",
    "audit-artifacts/**",
    "public/**",
    "types/**",
    ".github/**",
    ".husky/**",
    "package.json",
    "pnpm-lock.yaml",
    ".strato-manifest.json",
    "tsconfig.base.json",
    "*.md",
    "tsconfig.json",
    "*.sh",
    "apps/**/.eslintignore",
    "packages/**/.eslintignore",
    "supabase/**"
  ],
  "forbiddenPaths": [
    "node_modules/**",
    "apps/**/build/**",
    "**/__tests__/**/__snapshots__/**"
  ],
  "namingConventions": {
    "testFiles": "*.test.ts",
    "componentFiles": "*.tsx",
    "routeFiles": "route.ts"
  },
  "preferredEntryDir": "apps/frontend/app/"
} 