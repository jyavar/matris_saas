{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@repo/typescript-config/*": ["packages/typescript-config/*"],
      "@repo/db-types": ["packages/db-types"],
      "@repo/db-types/*": ["packages/db-types/*"]
    },
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "module": "Node16"
  }
}
