{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": false,
    "baseUrl": "./src",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "paths": {
      "@backend/*": ["./*"],
    },
  },
  "include": ["src", "src/types", "tests", "vitest.setup.ts"],
  "exclude": ["node_modules"]
} 