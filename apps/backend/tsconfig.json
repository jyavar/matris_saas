{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": false,
    "baseUrl": "./src",
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": false,
    "strictNullChecks": false,
    "paths": {
      "@backend/*": ["./*"],
      "@/services/*": ["services/*"],
      "@/controllers/*": ["controllers/*"],
      "@/middleware/*": ["middleware/*"],
      "@/utils/*": ["utils/*"],
      "@/types/*": ["types/*"],
      "@/routes/*": ["routes/*"],
      "@/lib/*": ["lib/*"]
    },
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "src/tests", "tests", "src/services/__tests__", "src/utils/controller-refactor.ts", "**/*.test.ts", "**/*.spec.ts"]
} 