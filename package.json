    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "react-router-dom": "^6.30.1",
    "storybook": "^9.0.13",
    "supabase": "^2.26.9",
    "tailwindcss": "^4.1.10",
    "ts-morph": "^26.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
