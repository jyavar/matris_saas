{
  "name": "strato-core-os",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "STRATO Core OS: A boilerplate for building resilient and scalable SaaS applications.",
  "author": "STRATO",
  "license": "MIT",
  "workspaces": [
    "frontend",
    "backend",
    "agent",
    "packages/*"
  ],
  "scripts": {
    "test": "vitest run",
    "@test:backend": "vitest run --root backend",
    "@validate:repo": "tsx scripts/validate-repo.ts",
    "@test:all": "vitest run --config ./vitest.config.ts",
    "@test:e2e": "playwright test",
    "@status": "tsx scripts/report-status.ts",
    "@preflight-check": "npm run @validate:env && npm run @validate:repo && npm run @test:all",
    "@validate:env": "tsx scripts/validate-env.ts",
    "@audit:module": "tsx scripts/audit-module.ts",
    "@fixmasivo": "eslint . --ext .ts,.tsx --fix && prettier --write .",
    "@qa": "echo 'AI Quality Agent not implemented yet.'",
    "@ux": "echo 'AI UX Agent not implemented yet.'",
    "@data": "echo 'AI Data Agent not implemented yet.'",
    "@refactor": "echo 'AI Refactor Agent not implemented yet.'",
    "@report:defense": "tsx scripts/report-strato-defense.ts",
    "@clone:saas": "tsx scripts/create-saas-clone.ts",
    "@watch:fortress": "tsx scripts/night-watchman.ts",
    "dev": "vite",
    "@dev:backend": "tsx backend/src/server.ts",
    "prepare": "husky"
  },
  "keywords": [
    "saas",
    "boilerplate",
    "monorepo",
    "typescript"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.53.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/supertest": "^6.0.3",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.21",
    "chokidar": "^4.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "inquirer": "^12.6.3",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "supertest": "^7.1.1",
    "tailwindcss": "^4.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "yargs": "^17.7.2",
    "zod": "^3.25.67"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.0",
    "express": "^5.1.0",
    "openai": "^5.6.0",
    "pino": "^9.7.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.0.0",
    "posthog-node": "^5.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "resend": "^4.6.0",
    "stripe": "^18.2.1"
  },
  "packageManager": "npm@10.7.0"
}
