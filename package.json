{
  "name": "strato-core-os",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "STRATO Core OS: A boilerplate for building resilient and scalable SaaS applications.",
  "author": "STRATO",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "modules/*",
    "frontend",
    "backend",
    "agent"
  ],
  "scripts": {
    "test": "vitest run",
    "@validate:repo": "tsx scripts/validate-repo.ts",
    "@test:all": "tsx scripts/run-all-tests.ts",
    "@status": "tsx scripts/report-status.ts",
    "@preflight-check": "npm run @validate:repo && npm run @test:all",
    "@audit:module": "tsx scripts/audit-module.ts",
    "@fixmasivo": "eslint . --ext .ts,.tsx --fix && prettier --write .",
    "@qa": "echo 'AI Quality Agent not implemented yet.'",
    "@ux": "echo 'AI UX Agent not implemented yet.'",
    "@data": "echo 'AI Data Agent not implemented yet.'",
    "@refactor": "echo 'AI Refactor Agent not implemented yet.'",
    "@report:defense": "tsx scripts/report-strato-defense.ts",
    "@clone:saas": "tsx scripts/create-saas-clone.ts",
    "prepare": "husky"
  },
  "keywords": [
    "saas",
    "boilerplate",
    "monorepo",
    "typescript"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@testing-library/react": "^16.3.0",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.5.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "inquirer": "^12.6.3",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "yargs": "^18.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
